map $sent_http_content_type $expires {
    default                       off;
    text/html                     off;
    ~text/                        1h;
    application/manifest+json     1h;
    ~image/                       365d;
    ~font/                        365d;
    text/css                      365d;
    application/x-javascript      365d;
    application/javascript        365d;
}
